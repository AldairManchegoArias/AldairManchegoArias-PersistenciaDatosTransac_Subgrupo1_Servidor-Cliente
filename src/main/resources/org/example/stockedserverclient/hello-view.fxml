<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ap_main" fx:controller="org.example.stockedserverclient.HelloController"
            prefHeight="500.0" prefWidth="500.0"
            xmlns:fx="http://javafx.com/fxml">
    <children>
        <Label fx:id="labelStatus" layoutX="130.0" layoutY="20.0" text="Esperando conexiones...">
            <font>
                <Font name="Arial Rounded MT Bold" size="20.0"/>
            </font>
        </Label>
        <ScrollPane fx:id="sp_main" layoutX="30.0" layoutY="60.0"
                    prefHeight="290.0" prefWidth="440.0" fitToWidth="true">
            <content>
                <VBox fx:id="vbox_messages" prefHeight="280.0" prefWidth="430.0"/>
            </content>
        </ScrollPane>
        <ListView fx:id="listViewUsers" layoutX="30.0" layoutY="370.0"
                  prefWidth="440.0" prefHeight="100.0"/>
    </children>
</AnchorPane>
